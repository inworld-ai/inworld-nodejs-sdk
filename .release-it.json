{
  "git": {
    "commitMessage": "chore: Release v${version}",
    "requireBranch": "main",
    "tag": false
  },
  "hooks": {
    "before:init": [
      "git pull",
      "yarn install",
      "yarn build",
      "yarn lint:check",
      "yarn prettier:check",
      "yarn test"
    ]
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md"
    }
  }
}
