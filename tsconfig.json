{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "build/src",
    "resolveJsonModule": true,
    "target": "es6",
    "types": ["jest", "node"],
    "paths": {
      "@proto/*" : ["../proto/*"]
    }
  },
  "include": [
    "src/**/*",
    "proto/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
