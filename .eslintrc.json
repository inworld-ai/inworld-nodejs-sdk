{
  "env": {
    "es2021": true
  },
  "extends": [
    "plugin:markdown/recommended",
    "plugin:prettier/recommended",
    "prettier/prettier",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "simple-import-sort"
  ],
  "rules": {
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",
    "no-throw-literal": "off"
  },
  "ignorePatterns": ["proto", "build"]
}
